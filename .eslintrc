{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": 2,
    "default-case": 1,
    "eqeqeq": 2,
    "no-return-await": 1,
    "no-shadow": "error"
    // 0 - off, 1 - warn, 2 - error
  }
}
